{
  "require-dev": {
    "phpunit/phpunit": "7.*",
    "squizlabs/php_codesniffer": "3.2.*",
    "phpdocumentor/phpdocumentor": "2.*"
  },
  "autoload": {
    "psr-4": {
      "EasyPHP\\": "./web/EasyPHP"
    }
  },
  "scripts": {
    "php-check": "phpcs web --standard=PSR2 --extensions=php --colors --ignore-annotations --report=full -p",
    "php-fix": "phpcbf --standard=PSR2 --extensions=php web --ignore-annotations -p",
    "test": "phpunit tests --bootstrap ./vendor/autoload.php",
    "generate-documentation": "phpdoc -d web --template=\"clean\" -t documentation",
    "build": [
      "@php-fix",
      "@php-check"
    ],
    "release": [
      "@php-fix",
      "@php-check",
      "@generate-documentation"
    ]
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "prefer-stable": true
}
