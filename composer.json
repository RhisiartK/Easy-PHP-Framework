{
  "name": "WebcubeTeam/Easy-PHP-Framework",
  "description": "This project's goal is to create a community driven and open source PHP framework which makes it easy and fast to develope webpages. It uses the newest PHP and Bootstrap. The project wants to be the most secure and easiest to use PHP framework.",
  "type": "project",
  "version": "0.4.0",
  "license": "GPL-3.0",
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "phpunit/phpunit": "7.*",
    "squizlabs/php_codesniffer": "3.2.*",
    "phpdocumentor/phpdocumentor": "2.*",
    "jasonlewis/resource-watcher": "1.2.*",
    "leafo/scssphp": "0.7.6"
  },
  "autoload": {
    "psr-4": {
      "EasyPHP\\": "./web/EasyPHP"
    }
  },
  "scripts": {
    "php-check": "phpcs web --standard=PSR2 --extensions=php --colors --ignore-annotations --report=full -p",
    "php-fix": "phpcbf --standard=PSR2 --extensions=php web --ignore-annotations -p",
    "test": "phpunit tests --bootstrap ./vendor/autoload.php",
    "generate-documentation": "phpdoc -d web --template=\"clean\" -t documentation",
    "start-watcher": "php watcher",
    "build": [
      "@php-fix",
      "@php-check",
      "@test"
    ],
    "release": [
      "@php-fix",
      "@php-check",
      "@test",
      "@generate-documentation"
    ]
  },
  "config": {
    "process-timeout": 0,
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "prefer-stable": true,
  "authors": [
    {
      "name": "Richárd Kéki",
      "email": "kricsi14@gmail.com",
      "role": "Developer"
    },
    {
      "name": "Ignác Török",
      "email": "smokerigni@gmail.com",
      "role": "Developer"
    }
  ]
}
